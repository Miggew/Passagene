{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "noEmit": true
    },
    "include": [
        "src/lib/supabase.ts",
        "src/lib/utils.ts",
        "src/contexts/AuthContext.tsx",
        "src/hooks/useAuth.ts",
        "src/vite-env.d.ts"
    ]
}